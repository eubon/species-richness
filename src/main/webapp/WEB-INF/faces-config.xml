<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">


    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
       
    <render-kit>
        <renderer>
            <component-family>javax.faces.Messages</component-family>
            <renderer-type>javax.faces.Messages</renderer-type>
            <renderer-class>sk.sav.ibot.speciesrichness.jsf.custom.renderer.BootstrapMessagesRenderer</renderer-class>
        </renderer>
    </render-kit>
       
    <!--
    <factory>
        <exception-handler-factory>
            sk.sav.ibot.speciesrichness.jsf.exception.SpeciesRichnessExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
    -->
 
    <system-event-listener>
        <source-class>javax.faces.component.html.HtmlInputText</source-class>
        <system-event-class>javax.faces.event.PostValidateEvent</system-event-class>
        <system-event-listener-class>sk.sav.ibot.speciesrichness.jsf.validation.PostValidationListener</system-event-listener-class>
    </system-event-listener>
 
</faces-config>
